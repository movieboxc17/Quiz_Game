            padding: 0;
        }

        .container {
            margin: 50px auto;
            padding: 40px;
            max-width: 900px;
            border-radius: 15px;
            background-color: rgba(44, 62, 80, 0.9);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.6);
        }

        h1 {
            margin-bottom: 40px;
            font-size: 2.8em;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
        }

        .question {
            margin: 20px 0;
            font-size: 1.5em;
        }

        .option {
            background-color: #34495e;
            padding: 15px;
            margin: 10px 0;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .option:hover {
            background-color: #5d6d7e;
        }

        .result {
            font-size: 1.8em;
            margin-top: 20px;
        }

        .button {
            margin-top: 20px;
            padding: 12px 20px;
            background-color: #f1c40f;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .button:hover {
            background-color: #d4ac0d;
        }
